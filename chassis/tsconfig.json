{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "composite": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": ["src", "./package.json"],
  "exclude": ["node_modules"],
  "extends": "../tsconfig.base.json"
}
